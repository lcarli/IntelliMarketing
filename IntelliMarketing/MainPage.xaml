<Page
    x:Class="IntelliMarketing.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelliMarketing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid" Background="#9DD9DD" >
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="VisualStateFullHD">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1920"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="VisualStateHD">
                    <VisualState.Setters>
                        <!--<Setter Target="stackAds.(UIElement.Visibility)" Value="Collapsed"/>-->
                        <Setter Target="canvasImage.(FrameworkElement.Height)" Value="200"/>
                        <Setter Target="HoldCamera.(FrameworkElement.Height)" Value="200"/>
                        <Setter Target="myImage.(FrameworkElement.Height)" Value="200"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1280"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="VisualStateLess">
                    <VisualState.Setters>
                        <!--<Setter Target="stackAds.(UIElement.Visibility)" Value="Collapsed"/>-->
                        <Setter Target="canvasImage.(FrameworkElement.Height)" Value="200"/>
                        <Setter Target="HoldCamera.(FrameworkElement.Height)" Value="200"/>
                        <Setter Target="myImage.(FrameworkElement.Height)" Value="200"/>
                        <!--<Setter Target="Content.(UIElement.Visibility)" Value="Collapsed"/>-->
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="780"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="1370"/>
        </Grid.ColumnDefinitions>
        <Image Source="Assets/Logo/logo.png" Grid.Column="0" Grid.Row="0" Tapped="Image_Tapped"/>
        <StackPanel x:Name="LeftPanel"
                    Background="White"
                    Grid.Column="0" Grid.Row="1" Margin="50"
                    MinWidth="300">
            <Canvas x:Name="canvasImage" 
                    Width="350" Height="275"
                    Margin="0,25,0,0">
                <Image x:Name="myImage" 
                       Width="307" 
                       Height="217" RenderTransformOrigin="0.529,0.537"/>
                <Rectangle x:Name="rectFace"
                           StrokeThickness="5" 
                           Stroke="Transparent"/>
                <Polygon x:Name="polAge" 
                         StrokeThickness="1">

                </Polygon>
                <TextBlock Foreground="Black" x:Name="textAge"></TextBlock>
            </Canvas>
            <CaptureElement x:Name="HoldCamera" Margin="50" Height="275"/>
        </StackPanel>
            <WebView x:Name="Page" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="50" Visibility="Collapsed"/>
